@import 'nib'

@media (min-width: 992px)
  .affix, .affix-bottom
    width: 213px;

  .affix
    position: fixed;
    top: 80px;

  .affix-bottom
    position: absolute;

  .affix-bottom, .affix, .affix-top
    margin-top: 0;
    margin-bottom: 0;
    left: 10px;

.pull-left
  float: left !important

.pull-right
  float: right !important

h1, h2, h3, h4, h5, h6
  font-weight bold
  padding-bottom 10px

.carousel-control
  .fa
    position absolute
    top: 50%
    z-index: 5
    display: inline-block

.tags a
  margin-left: 2px

body
  background-color: #f7faf2;
  overflow-x:hidden;

.widget
  .list-group
    margin-bottom 0px
  ul
    > li
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    > a
      text-overflow: ellipsis;
  .icon:before
    content: '\f069';
    color: #4141e9;
    font: 12px FontAwesome;

article
  header
    .title
      overflow: hidden;
      overflow-wrap: break-word;
    .icon
      color: #258fb8;
  .post .icon:before
    content: '\f15c';
  .comment .icon:before
    content: '\f086';
  .photo .icon:before
    content: '\f030';
  .link
    .icon:before
      content: '\f0c1';
    .title a:after
      content: '\f08e';
      color: #999;
      font: 12px FontAwesome;
      padding-left: 10px;
      vertical-align: super;
  video, img
    min-width: 0%;
    max-width: 100%;
    height: auto;
    border: none;
  .entry
    hr
      border-top: 1px solid #080
    h3
      color #080
      margin 20px 0px 10px 0px
      border-left green solid thick
      padding 10px 0px 10px 10px
      background-color #e2e2e2
      font-size 160%
    h4
      color #080
      margin 40px 0px 10px 0px
      border-left orange solid
      padding 5px 0px 5px 10px
      background-color #e2e2e2
      font-size 120%
    blockquote
      footer
        cite before
        content "â€”"
        padding 0 0.3em
    code
      white-space: pre
      word-wrap: break-word
      overflow: auto
    .img_block
      display: block
      position: relative
      .caption
        display: none
        position: absolute
        top: 0
        color: #fff
  .categories .breadcrumb
    padding: 5px 5px;
    margin-bottom: 0px;
  .categories .breadcrumb > li + li:before
    padding: 0px 2px;
    content: '/';
  footer
    padding-top: 10px;
    border-top: 1px solid #333
  a.more-link
    padding-right: 20px;
    padding-top: 10px;
    padding-bottom: 20px;
    color: #880088;
    text-decoration: none;

#sidebar
  .tagcloud .entry > a
    padding-left: 5px;
    display: inline-block;

#tooltip
  position: absolute;
  z-index: 1000;
  word-wrap: break-word;
  background: #000;
  text-align: left;
  padding: 5px;
  min-height: 1em;
  -moz-border-radius: 5px;
  -khtml-border-radius: 5px;
